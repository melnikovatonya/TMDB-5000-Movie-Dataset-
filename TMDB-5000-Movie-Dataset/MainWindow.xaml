<Window x:Class="TMDB_5000_Movie_Dataset.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMDB_5000_Movie_Dataset"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <Menu Margin="5">
                <Button Content="Начать обучение"/>
            </Menu>
            <DockPanel Margin="5">
                <Label Content="Название фильма: "/>
                <TextBlock/>
            </DockPanel>
            <DockPanel Margin="5">
                <Label Content="Описание: "/>
                <TextBox Height="100" TextWrapping="Wrap"/>
            </DockPanel>
            <Button Content=" Определить жанры " HorizontalAlignment="Center"></Button>
        </StackPanel>
    </Grid>
</Window>
